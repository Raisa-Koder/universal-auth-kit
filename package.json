{
  "name": "@kodeforgex/authjoy",
  "version": "0.1.0-beta.1",
  "description": "A framework-agnostic authentication toolkit for modern TypeScript projects.",
  "main": "dist/index.cjs",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "author": "Raisa Koder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KodeforgeX/Authjoy/issues"
  },
  "homepage": "https://github.com/KodeforgeX/Authjoy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KodeforgeX/Authjoy"
  },
  "keywords": [
    "Authentication",
    "library",
    "Authorization",
    "Framework-agnostic",
    "security",
    "jwt",
    "strategy"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=9.x"
  },
  "packageManager": "pnpm@9.14.2",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "prepublishOnly": "pnpm run build",
    "build": "pnpm run validate-typescript && pnpm run build:clean && pnpm run generate-dist",
    "build:clean": "rimraf dist || true",
    "generate-dist": "tsup src/index.ts --minify --tsconfig tsconfig.prod.json --dts --format cjs,esm --out-dir dist",
    "validate-typescript": "tsc -p tsconfig.prod.json --noEmit",
    "test": "vitest run --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "typos": "chmod +x scripts/check_typos.sh && ./scripts/check_typos.sh",
    "docs:dev": "vitepress dev docs",
    "docs:build": "typedoc --plugin typedoc-plugin-markdown --out docs/api src --readme none && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "gh-pages -d docs/.vitepress/dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.11",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-istanbul": "^2.1.5",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-vitest": "^0.4.1",
    "fs-extra": "^11.3.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "markdown-it-shiki": "^0.9.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.12",
    "vitepress": "^1.6.4",
    "vitest": "^2.1.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.36.0",
    "@swc/core-linux-x64-gnu": "^1.11.11"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "publishConfig": {
    "tag": "beta"
  }
}
